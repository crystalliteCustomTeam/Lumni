<div class="tld-py-[90px]">
  <div class="tld-container">
    <div id="embla" class=" tld-overflow-hidden ">
      <div class="tld-flex [margin-left:calc(2rem_*_-1)] ">
        {% for block in section.blocks %}
          {% if block.type == 'slides' %}
            <div class="tld-grow-0 tld-shrink-0  md:tld-basis-1/2 lg:tld-basis-1/3 tld:min-w-0  tld-pl-8 ">
              <div class="tld-bg-[#F5F7F9] tld-p-10 tld-rounded-[20px] tld-w-full">
                <div>
                  <h2 class="tld-text-[18px] lg:tld-text-[20px] xl:tld-text-[22px] 2xl:tld-text-[24px] tld-text-center">{{ block.settings['lumni-carosuel-item-text'] }}</h2>
                </div>
                <div class="tld-my-10 tld-flex tld-justify-center">
                  {% if block.settings['lumni-carousel-item-image'] %}
                    <img src="{{ block.settings['lumni-carousel-item-image'] | image_url  }}" width="250" height="300" class="tld-w-[250px] tld-h-[300px] tld-object-contain">
                   
                  {% endif %}
                </div>
                <div class="tld-flex tld-justify-center">
                  <div class="tld-bg-[#C7DBC6] tld-py-3 tld-px-5 lg:tld-py-5 lg:tld-px-8  md:tld-mt-5 lg:tld-mt-10 tld-rounded-[30px] tld-w-max ">
                    <a
                      href="{{ block.settings.lumni-carousel-item-url }}"
                      class=" tld-text-[12px] lg:tld-text-[15px] xl:tld-text-[16px] tld-text-black  tld-flex tld-gap-5"
                    >
                     Shop {{ block.settings['lumni-carosuel-item-text'] }}
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 64 64"
                        class="tld-w-[18px] tld-h-[18px] lg:tld-w-[24px] lg:tld-h-[24px]"
                      >
                        <path
                            d="M48 16h-4v-4c0-6.6-5.4-12-12-12S20 5.4 20 12v4h-4c-2.2 0-4 1.8-4 4v36c0 2.2 1.8 4 4 4h32c2.2 0 4-1.8 4-4V20c0-2.2-1.8-4-4-4zM24 12c0-4.4 3.6-8 8-8s8 3.6 8 8v4H24v-4zm24 44H16V20h4v4h4v-4h16v4h4v-4h4v36z"
                            fill="#000000" />
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "lumni Carousel",
  "tag": "section",
  "class": "lumni-carousel",
  "blocks": [
    {
      "type": "slides",
      "name": "Lumni SLides",
      "settings": [
        {
          "type": "text",
          "id": "lumni-carosuel-item-text",
          "label": "Slide Text"
        },
        {
          "type": "image_picker",
          "id": "lumni-carousel-item-image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "lumni-carousel-item-url",
          "label": "Slide Href"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Lumni Carousel"
    }
  ]
}
{% endschema %}
